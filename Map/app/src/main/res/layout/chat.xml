<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/chat_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tang.map.cycle.chat">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">
        <Button
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/backicon"/>
        <TextView
            android:id="@+id/account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="account"
            android:textSize="32dp"/>
        </RelativeLayout>
    <ListView
        android:id="@+id/chat_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top"
        android:layout_above="@+id/bottom"
        android:fadingEdge="none"
        android:background="#00000000"
        android:divider="#aaaaaa"
        android:dividerHeight="0px">
    </ListView>
    <FrameLayout
        android:id="@+id/bottom"
        android:background="@drawable/chat_mask"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/chat_type_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/chat_switch_voice"
                android:background="@drawable/chat_type_voice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/chat_text"
                android:textColor="#ffffffff"
                android:layout_toRightOf="@+id/chat_switch_voice"
                android:layout_toLeftOf="@+id/chat_txt_tosend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/chat_text_input"/>
            <ImageButton
                android:id="@+id/chat_txt_tosend"
                android:layout_alignParentRight="true"
                android:background="@drawable/chat_text_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/chat_type_voice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/chat_switch_text"
                android:background="@drawable/chat_type_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageButton
                android:id="@+id/chat_voice_tosend"
                android:layout_toRightOf="@+id/chat_switch_text"
                android:background="@drawable/chat_voice_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            </RelativeLayout>
        </FrameLayout>
</RelativeLayout>
