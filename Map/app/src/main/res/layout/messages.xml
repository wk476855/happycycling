<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/notification_mask"
    android:layout_centerHorizontal="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/head"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:background="@drawable/notification_head"
        android:layout_width="120dp"
        android:layout_height="120dp" />
    <TextView
        android:id="@+id/userIdLable"
        android:layout_toRightOf="@+id/head"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/notification_lable_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/userId"
        android:text="userid"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/userIdLable"
        android:layout_toRightOf="@+id/userIdLable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/verityLabel"
        android:background="@drawable/notification_label_vefity"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/userIdLable"
        android:layout_alignLeft="@+id/userIdLable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id = "@+id/verify"
        android:layout_alignBottom="@+id/verityLabel"
        android:layout_toRightOf="@+id/verityLabel"
        android:text="verify"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageButton
        android:id="@+id/agree"
        android:background="@drawable/notification_button_agree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/head"
        android:layout_alignRight="@+id/verityLabel" />
    <ImageButton
        android:id="@+id/reject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/notification_button_reject"
        android:layout_alignBottom="@+id/head"
        android:layout_toRightOf="@+id/agree"
        android:layout_marginLeft="10dp"/>
</RelativeLayout>