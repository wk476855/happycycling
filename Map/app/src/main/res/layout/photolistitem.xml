<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/cycle_mask"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/latlng"
        android:src="@drawable/cycle_latlng"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/loc"
        android:layout_toRightOf="@+id/latlng"
        android:layout_alignBottom="@+id/latlng"
        android:layout_marginLeft="10dp"
        android:text="location"
        android:textColor="#ff36ce1e"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/description"
        android:layout_below="@+id/loc"
        android:layout_alignLeft="@+id/loc"
        android:text="description"
        android:textSize="23dp"
        android:textColor="#ff3c3f41"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/photo"
        android:layout_below="@+id/description"
        android:layout_marginTop="5dp"
        android:layout_alignLeft="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/timeImage"
        android:layout_below="@+id/photo"
        android:layout_alignLeft="@+id/latlng"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/cycle_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/time"
        android:layout_toRightOf="@+id/timeImage"
        android:layout_alignTop="@+id/timeImage"
        android:layout_marginRight="10dp"
        android:text="time"
        android:textColor="#ff36ce1e"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>