<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/sendphoto_backgroud"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tang.map.cycle.sendphoto">
    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/back"
            android:background="@drawable/backicon"/>
        <Button
            android:id="@+id/send"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/publishicon"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/description"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:textColor="#ff3c3f41"
            android:gravity="top"
            android:hint="写点什么吧..."
            android:textColorHint="#ffafb4bb"/>
        <ImageView
            android:id="@+id/photo"
            android:src="@drawable/sendphoto_photoicon"
            android:background="#00000000"
            android:layout_below="@+id/description"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <!--<ImageView
            android:id="@+id/test"
            android:src="@drawable/sendphoto_photo"
            android:background="#00000000"
            android:layout_below="@+id/description"
            android:layout_toRightOf="@+id/photo"
            android:layout_width="100dp"
            android:layout_height="100dp" />-->
        </RelativeLayout>
</RelativeLayout>
